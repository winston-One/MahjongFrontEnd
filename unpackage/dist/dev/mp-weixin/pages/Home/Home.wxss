page {
  background-color: #f6f6f6;
}
.top {
  position: -webkit-sticky;
  position: sticky;
  z-index: 9999;
  border-bottom: 2rpx solid #efefef;
  top: 0;
  height: 520rpx;
}
.top .stores {
  background-color: #FFFFFF;
  width: 95%;
  border-radius: 10px;
  position: absolute;
  top: 300rpx;
  left: 20rpx;
  padding: 25rpx;
}
.top .stores .title {
  display: flex;
  justify-content: space-between;
}
.top .stores .title .store-name {
  font-size: 18px;
  font-weight: inherit;
}
.top .stores .location {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 23rpx;
}
.top .stores .location .gps {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.top .stores .location .gps text {
  font-size: 12px;
}
.top .stores .location .contact-mes {
  display: flex;
  width: 20%;
  justify-content: space-between;
  align-items: center;
}
.menu-list {
  margin-top: 20rpx;
  background-color: #fff;
  border-radius: 20rpx;
  padding: 20rpx;
}
.menu-list .subscribe {
  margin-top: 50rpx;
}
.menu-list .subscribe .subscribe-title {
  text-align: center;
  font-size: 18px;
  font-weight: bold;
  margin-top: 10rpx;
}
.menu-list .subscribe .select-button {
  margin: auto auto;
}
.menu-list .menu {
  display: flex;
  flex-wrap: wrap;
}
.menu-list .menu .menu-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 10rpx;
  margin-right: 15rpx;
}
.menu-list .menu .menu-item image {
  width: 60rpx;
  height: 60rpx;
}
.introduct {
  margin-top: 15rpx;
  background-color: #fff;
  padding: 15rpx;
}
.introduct .content {
  margin-bottom: 15rpx;
  font-size: 17px;
}
.introduct .introduct-image image {
  width: 100%;
}
.user-step {
  margin-top: 15rpx;
  background-color: #fff;
}
.precautions {
  margin-top: 15rpx;
  background-color: #fff;
  padding: 25rpx;
}
.precautions .precautions_item {
  margin-top: 16rpx;
}
.orderBtn {
  z-index: 1000;
  opacity: 0.8;
  position: fixed;
  bottom: 80rpx;
  right: 10rpx;
}
.orderBtn .inputbtn view {
  margin-right: 5rpx;
}
.store_popup {
  background-color: #FFFFFF;
}
.store_popup .store-item {
  padding: 30rpx;
  border-bottom: 2px solid #e6e6e6;
  font-size: 18px;
  display: flex;
  justify-content: space-between;
}
.store_popup .cancel {
  padding: 30rpx;
  margin-top: 20rpx;
  border-top: 2px solid #e6e6e6;
  font-size: 18px;
  text-align: center;
}
.wifi_box {
  padding: 20rpx;
}
.wifi_box :first-child {
  font-weight: bold;
  font-size: 17px;
  text-align: center;
}
.wifi_box .wifi_btn {
  display: flex;
  justify-content: space-around;
}

