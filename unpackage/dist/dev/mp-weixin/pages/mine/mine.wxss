page {
  background-color: #f6f6f6;
}
.profily {
  background: #FEFEFE;
  box-sizing: border-box;
  box-shadow: 0px 2px 5px #EDEDED;
  height: 350rpx;
}
.profily .base {
  display: flex;
  align-items: center;
  padding-bottom: 35rpx;
  position: relative;
  padding: 13px 15px 13px 14px;
  background-color: #fff;
}
.profily .base .nick {
  display: flex;
  flex-direction: column;
}
.profily .base .nick text {
  margin-left: 20px;
  font-size: 30rpx;
}
.profily .base .right {
  display: flex;
  flex-direction: column;
}
.profily .base .right .refresh {
  position: absolute;
  height: 50rpx;
  width: 50rpx;
  right: 10px;
  top: 10px;
}
.profily .base .right .myHomePage {
  position: absolute;
  top: 130rpx;
  left: 560rpx;
  display: flex;
  justify-content: flex-start;
}
.profily .base:active {
  background: #f8f8f8;
}
.profily .order_status {
  width: 90%;
  position: absolute;
  margin: 0 auto;
  top: 200rpx;
  height: 300rpx;
  left: 5%;
  background: #dddddd;
  box-sizing: border-box;
  box-shadow: 0px 2px 5px #EDEDED;
  border-radius: 30px;
}
.profily .order_status .order_num {
  display: flex;
  justify-content: space-between;
  padding: 50rpx;
}
.profily .order_status .order_num text {
  margin-right: 10rpx;
  font-weight: bold;
}
.profily .order_status .order_menu {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}
.profily .order_status .order_menu .status {
  font-size: 24rpx;
  text-align: center;
  letter-spacing: .5px;
  display: flex;
  flex-direction: column;
  border-radius: 10px;
  padding: 16rpx 10rpx 16rpx 10rpx;
}
.profily .order_status .order_menu .status .icon {
  width: 70rpx;
  height: 70rpx;
  margin: 0 auto;
  margin-bottom: 5px;
}
.center-menu {
  width: 95%;
  border-radius: 30px;
  background-color: #fff;
  display: flex;
  flex-direction: column;
  justify-content: center;
  margin: 0 auto;
  padding: 20rpx;
  margin-top: 200rpx;
}
.center-menu .center-menu-item {
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  border-bottom: 2px solid #f6f6f6;
  height: 130rpx;
}
.center-menu .center-menu-item .item {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.center-menu .center-menu-item .item button {
  width: 100%;
  position: absolute;
  opacity: 0;
  z-index: 1;
}
.center-menu .center-menu-item .item .item-name {
  margin-left: 15rpx;
}
.jieshao {
  text-align: -webkit-center;
  font-size: 15px;
  font-weight: 600;
  padding: 0 20rpx 0 20rpx;
  margin-top: 20rpx;
}

