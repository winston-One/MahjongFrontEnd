page {
  background-color: #f6f6f6;
}
.submit-order {
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.submit-order .order-msg {
  display: flex;
  flex-direction: column;
  justify-content: center;
  background-color: #fff;
  margin-top: 15rpx;
}
.submit-order .order-msg .flex-style {
  display: flex;
  justify-content: space-between;
  padding: 45rpx;
  border-bottom: 2px solid #f6f6f6;
}
.submit-order .order-msg .flex-style .reserve_time {
  display: flex;
  justify-content: flex-end;
}
.submit-order .order-msg .flex-style .coupon-name {
  font-weight: 200;
}
.submit-order .order-msg .coupon-style {
  display: flex;
  flex-direction: column;
  padding: 30rpx;
  font-weight: 200;
  border-bottom: 2px solid #f6f6f6;
}
.submit-order .tip {
  background-color: #fff;
  margin-top: 15rpx;
  padding: 25rpx;
}
.reservation {
  position: fixed;
  height: 250rpx;
  bottom: 0;
  font-size: 17px;
  width: 100%;
  border-top-right-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  padding: 25rpx;
}
.reservation .reservation_total {
  color: #f7434d;
}
.reservation .confirm_btn {
  background-color: #7fa1f7;
  color: #fff;
  height: 100rpx;
  width: 40%;
  border-radius: 35rpx;
  text-align: center;
  padding: 25rpx;
}
.coupon_list {
  display: flex;
  flex-direction: column;
  background-color: #fff;
  padding: 20rpx;
}
.coupon_list .coupon_item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 20rpx;
  border-bottom: 2px solid #e6e6e6;
  height: 100rpx;
}
.coupon_list .coupon_item .msg {
  font-size: 16px;
  font-weight: 500;
}
.coupon_list .coupon_item .btn {
  font-size: 14px;
  background-color: #7fa1f7;
  height: 80rpx;
  width: 150rpx;
  border-radius: 30rpx;
  padding: 0;
  margin: 0;
  text-align: center;
}

