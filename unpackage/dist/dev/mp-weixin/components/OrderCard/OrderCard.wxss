.order-detail {
  background-color: #fff;
  border-radius: 20px;
  display: flex;
  flex-direction: column;
  align-content: center;
}
.order-detail .order_status {
  padding: 15rpx;
  margin-top: 10rpx;
  border-bottom: 2px solid #f6f6f6;
}
.order-detail .order_info {
  display: flex;
  justify-content: space-around;
  margin-top: 15rpx;
}
.order-detail .order_info image {
  width: 280rpx;
  height: 200rpx;
}
.order-detail .order_info .order_item {
  display: flex;
  flex-direction: column;
}
.order-detail .order_info .order_item .item_title {
  margin-top: 10rpx;
  font-weight: 600;
  font-size: 18px;
}
.order-detail .order_info .order_item .order_duration {
  display: flex;
  justify-content: flex-start;
}
.order-detail .order_info .order_item .order_duration .voupon {
  border: 1px solid #a3c3f9;
}
.order-detail .order_info .order_item .order_price {
  display: flex;
  justify-content: flex-start;
}
.order-detail .order_info .order_item .order_price image {
  width: 45rpx;
  height: 45rpx;
  border-radius: 10rpx;
}
.order-detail .order_btn {
  display: flex;
  justify-content: flex-end;
  border-top: 2px solid #f6f6f6;
  padding: 15rpx;
}
.order-detail .order_btn .btn1 {
  font-size: 14px;
  padding: 10rpx;
  border: 2px solid #e6e6e6;
  border-radius: 15rpx;
  margin-right: 10rpx;
}
.order-detail .order_btn .btn1 button {
  width: 15%;
  height: 3.5%;
  position: absolute;
  opacity: 0;
  z-index: 1;
}
.order-detail .order_btn .btn2 {
  font-size: 14px;
  padding: 10rpx;
  border-radius: 15rpx;
  background-color: #a3c3f9;
  text-align: center;
}

