.reserve-room-card {
  padding: 25rpx;
  background-color: #fff;
  border-radius: 20px;
  display: flex;
  flex-direction: column;
  margin-top: 15rpx;
  padding: 30rpx;
}
.reserve-room-card .room-image {
  width: 98%;
  height: 330rpx;
}
.reserve-room-card .room_name {
  font-size: 17px;
  font-weight: 600;
  margin-top: 15rpx;
}
.reserve-room-card .room_server {
  display: flex;
  justify-content: flex-start;
  margin-top: 15rpx;
  margin-left: 8rpx;
}
.reserve-room-card .reserve-result {
  display: flex;
  flex-direction: column;
  margin-top: 15rpx;
}
.reserve-room-card .reserve-result .reserve_tag {
  display: flex;
  justify-content: flex-start;
}
.reserve-room-card .room_reserve {
  display: flex;
  justify-content: space-between;
  margin-top: 25rpx;
  align-items: center;
}
.reserve-room-card .room_reserve .room_price .price {
  font-size: 16px;
  font-weight: 500;
}
.reserve-room-card .room_reserve .room_price .room_coupon {
  font-size: 13px;
  border: 1px solid #7fa1f7;
  font-weight: 100;
}
.reserve-room-card .room_reserve .reserve {
  display: flex;
  flex-direction: column;
  border: 2px solid #7fa1f7;
  border-radius: 36rpx;
}
.reserve-room-card .room_reserve .reserve .reserve_free {
  text-align: center;
}
.reserve-room-card .room_reserve .busy {
  border: 2px solid #e6e6e6;
}

